<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundo"
    tools:context="com.cm.trabalho.weather.ActivityPesquisa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="153dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_logo"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Cidade:" />
        <EditText
            android:id="@+id/edCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe a Cidade"/>
        <TextView
            android:id="@+id/tEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o Estado"/>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                    android:id="@+id/bPesquisar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesquisar"
                    android:gravity="center" />
            <Button
                android:id="@+id/btBuscasAnteriores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscas Anteriores"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>


